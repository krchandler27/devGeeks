{{!-- For for updating existing Post --}}

<div class="col-sm-12 col-md-12 col-lg-6 mx-auto">
  <h3 class="text-center titleSize">updateBlog( )</h3>

  <div class="mt-4">
    <form class="form-control" id="update-blog-outline">

      <input type="hidden" id="blog-id" data-id="{{blog.id}}" value="{{blog.id}}" />

      <div class="d-flex justify-content-center align-items-center">
        <input class="form-input" type="text" class="h1 p-1 m-2" id="blog-title" name="blog-title"
          value="{{blog.title}}" />
      </div>

      <div class="d-flex">
        <input class="m-3 p-3 h4 expand" type="text" id="blog-body" name="blog-body"
          value="{{blog.body}}" /></input>
      </div>

      <div class="form-group d-flex justify-content-center">
        <p>
          <button type="submit" class="btn btn-md btn-info">updateBlog( )</button>
          <a href="/profile" type="button" id="" class="btn btn-danger btn-md">Ctrl + C</a>
        </p>
      </div>
    </form>
  </div>
</div>