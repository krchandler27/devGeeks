{{!-- Form for creating a new blog for signed in user --}}
<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-9 mx-auto">
    <h3 class="text-center titleSize">addNewBlog:</h3>

    <div class="px-5 pt-3">
      <form class="new-blog-form">

        <div class="form-group">
          <label for="blog-title" style="font-weight: bold;">blogTitle:</label>
          <input class="form-input" type="text" id="blog-title" name="blog-title" />
        </div>

        <div class="form-group">
          <label for="blog-body" style="font-weight: bold;">blogBody:</label>
          <textarea id="blog-body" name="paragraph" rows="20" cols="100" name="blog-body"></textarea>
        </div>

        <div class="form-group d-flex justify-content-center">
          <p>
            <button type="submit" class="btn btn-primary">addBlog</button>
          </p>
        </div>
      </form>
    </div>
  </div>
</div>