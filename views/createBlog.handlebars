{{!-- Form for creating a new blog for signed in user --}}

<div class="col-sm-12 col-md-12 col-lg-6 mx-auto">
  <h3 class="text-center titleSize">createNewBlog( )</h3>

  <div class="">
    <form class="new-blog-form form-control">

      <div class="d-flex justify-content-center align-items-center">
        <input placeholder="Hella Awesome Title Here" class="h1 p-1 m-2" id="blog-title" name="blog-title" />
      </div>

      <div class="d-flex justify-content-center align-items-center">
        <textarea placeholder="Make it interesting, maybe your blog will go viral o.O..." class=" m-2 p-3 h3"
          id="blog-body" name="paragraph" rows="20" cols="100" name="blog-body"></textarea>
      </div>

      <div class="form-group d-flex justify-content-center">
        <p>
          <button type="submit" class="btn btn-primary">createNewBlog( )</button>
        </p>
      </div>
    </form>
  </div>
</div>