{{! Display for a single blog with comments }}
<div class="row d-flex justify-content-center py-5" style="background-image: url('/assets/images/blank-blog.webp'); background-repeat:no-repeat; background-size:cover;">
  <div class="blog d-flex flex-column m-5 w-50" >
    <div class="align-self-center">
      <h1 class="text-success fs-1">{{title}}</h1>
    </div>
   
     
    <div class="align-self-center">
      <br />
      <p class="text-justify fs-6">
        {{body}}
      </p>
    </div>

    <br />
    <div class="align-self-center">
      <p>
        <a href="/blogs/{{id}}/addComment" class="btn btn-primary">addComment</a>
      </p>
    </div>
<br>
Comments:
    <!-- Loop over each comment in the comments array and display each comment -->
    {{#each comments as |comment|}}
    <div class="row d-flex justify-content-center border rounded mb-3">
      <div class="blog d-flex flex-column mb-3 w-50">
        <div class="align-self-center">
          <h4 class="fs-5">{{comment.body}}</h4>
        </div>
      </div>
      <div>
        <h6 class="fs-6 text-end">-{{user.name}}</h6>
      </div>
    </div>
    {{/each}}
  </div>
</div>
